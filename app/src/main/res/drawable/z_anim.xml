<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:propertyName="translationZ"
            android:valueTo="8dp"
            android:valueType="floatType"
            >

        </objectAnimator>
    </item>
    <item>
        <!--objectAnimator 属性动画  定义z轴的下沉效果  这个属性是没有提示的-->
        <objectAnimator
            android:duration="@android:integer/config_shortAnimTime"
            android:propertyName="translationZ"
            android:valueTo="0dp"
            android:valueType="floatType"
            >

        </objectAnimator>
    </item>
</selector>